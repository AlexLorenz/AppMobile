<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".cadastro">

    <EditText
        android:id="@+id/nome"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="218dp"
        android:layout_marginBottom="27dp"
        android:hint="Nome"
        android:textColor="@color/corFonte"
        android:textColorHint="@color/corFonte"
        app:layout_constraintBottom_toTopOf="@+id/email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/email"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="29dp"
        android:drawableLeft="@android:drawable/ic_dialog_email"
        android:drawablePadding="10dp"
        android:hint="E-mail"
        android:textColor="@color/corFonte"
        android:textColorHint="@color/corFonte"
        app:layout_constraintBottom_toTopOf="@+id/senha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nome" />

    <EditText
        android:id="@+id/senha"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="29dp"
        android:layout_marginBottom="28dp"
        android:drawableLeft="@drawable/password"
        android:drawablePadding="10dp"
        android:hint="Senha"
        android:inputType="textPassword"
        android:textColor="@color/corFonte"
        android:textColorHint="@color/corFonte"
        app:layout_constraintBottom_toTopOf="@+id/senhaConf"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email" />

    <EditText
        android:id="@+id/senhaConf"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="29dp"
        android:layout_marginBottom="57dp"
        android:drawableLeft="@drawable/password"
        android:drawablePadding="10dp"
        android:hint="Repetir senha"
        android:inputType="textPassword"
        android:textColor="@color/corFonte"
        android:textColorHint="@color/corFonte"
        app:layout_constraintBottom_toTopOf="@+id/cadastrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/senha" />

    <Button
        android:id="@+id/cadastrar"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="44dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/roundedbutton"
        android:text="Cadastrar"
        android:textColor="@color/corFonte"
        android:onClick="retornaTela"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/senhaConf" />

</androidx.constraintlayout.widget.ConstraintLayout>